@using System;
@using Sandbox;
@using Sandbox.UI;
@inherits Panel
@attribute [StyleSheet]

@namespace Rhythm4K

<root
    <div class="menu">
        <MainMenuButton Text="Singleplayer" Subtitle="Select a Song" onclick=@SingleplayerButton />
        @* <MainMenuButton Text="Multiplayer" /> *@
        <MainMenuButton Text="Browse Charts" onclick=@BrowseButton />

        <div style="height: 150px" />

        <MainMenuButton Text="Back" onclick=@BackButton class="back"/>
    </div>
</root>

@code
{
    void SingleplayerButton()
    {
        MainMenu.Instance.Navigate("/song-select");
    }

    void BrowseButton()
    {
        MainMenu.Instance.Navigate("/browse");
    }

    void BackButton()
    {
        MainMenu.Instance.Navigate("/");
    }
}